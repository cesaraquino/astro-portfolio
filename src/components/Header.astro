---
import IconMenu from "./icons/IconMenu.astro";
import IconLight from "./icons/IconLight.astro";
import IconDark from "./icons/IconDark.astro";
import IconClose from "./icons/IconClose.astro";

const navItems = [
  {
    title: "About",
    href: "#about",
  },
  {
    title: "Work",
    href: "#work",
  },
  {
    title: "Testimonials",
    href: "#testimonials",
  },
  {
    title: "Contact",
    href: "#contact",
  },
];
---

<header class="sticky top-0 bg-white dark:bg-gray-950">
  <div
    class="max-w-7xl mx-auto flex items-center justify-between py-5 md:py-4 px-4 md:px-8">
    <a href="/" class="text-3xl font-bold">&lt;SS /&gt;</a>

    <button id="show-menu" class="md:hidden">
      <IconMenu />
    </button>

    <div
      id="menu"
      class="fixed h-screen bg-gray-200 dark:bg-gray-50 top-0 right-0 w-full transform translate-x-full md:translate-x-0 transition-transform md:w-auto md:h-auto md:relative">
      <nav
        class="w-xs absolute top-0 right-0 h-screen shadow-xl bg-white dark:bg-gray-950 md:relative md:flex md:shadow-none md:h-auto md:w-auto">
        <div
          class="flex justify-between items-center p-4 border-b-gray-100 dark:border-b-gray-800 border-b-1 mb-2 md:hidden">
          <a href="/" class="text-2xl font-bold">&lt;SS /&gt;</a>
          <button id="close-menu">
            <IconClose />
          </button>
        </div>

        <ul
          class="flex flex-col md:flex-row items-start md:items-center gap-6 font-medium py-2 md:py-0">
          {
            navItems.map((item) => (
              <li class="w-full md:w-auto">
                <a
                  class="text-gray-600 dark:text-gray-100 px-4 md:px-0 nav-link inline-block w-full"
                  href={item.href}>
                  {item.title}
                </a>
              </li>
            ))
          }
        </ul>

        <ul
          class="flex flex-col md:flex-row items-start md:items-center gap-4 md:gap-6 font-medium border-gray-100 dark:border-gray-800 border-t-1 pt-2 mt-2 md:border-t-0 md:pt-0 md:mt-0 md:border-l-1 md:pl-5 md:ms-6">
          <li class="w-full md:w-auto">
            <a
              id="theme-toggle"
              href="#"
              class="flex items-center justify-between py-2 px-4 md:p-0">
              <span class="md:hidden">Switch Theme</span>
              <IconLight />
              <IconDark />
            </a>
          </li>
          <li class="w-full md:w-auto px-4 md:px-0">
            <a
              href="#"
              class="bg-gray-900 text-gray-50 dark:bg-gray-200 dark:text-gray-900 py-2 px-4 rounded-xl inline-block text-center w-full md:w-auto">
              Download CV
            </a>
          </li>
        </ul>
      </nav>
    </div>
  </div>
</header>
