---
const { titleExperience, listExperience, dateExperience } = Astro.props;
---

<div
  class="p-8 flex flex-col md:flex-row justify-between items-start gap-4 md:gap-12 bg-white dark:bg-gray-800 rounded-xl shadow-md">
  <div class="w-full md:w-[206px]">
    <img src="/images/upwork_logo.svg" alt="upwork" class="w-[102px]" />
  </div>
  <div class="w-full md:w-sm">
    <h3 class="text-xl font-bold mb-4">{titleExperience}</h3>
    <ul class="list-disc pl-6">
      {listExperience.map((item: string) => <li class="mb-1">{item}</li>)}
    </ul>
  </div>
  <div class="w-full md:w-44 text-left md:text-right">
    <p>{dateExperience}</p>
  </div>
</div>
