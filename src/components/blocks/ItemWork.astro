---
import Tag from "@/components/buttons/Tag.astro";

const tags = [
  "React.js",
  "Next.js",
  "Typescript",
  "Nest.js",
  "PostgreSQL",
  "Tailwindcss",
  "Figma",
  "Cypress",
  "Storybook",
  "Git",
];
---

{
  [1, 2, 3].map((_, index) => (
    <div
      class={`flex flex-col md:flex-row justify-between shadow-md rounded-xl overflow-hidden ${index === 1 ? "md:flex-row-reverse" : ""}`}>
      <div class="w-full md:w-1/2 bg-gray-50 dark:bg-gray-700 p-8 md:p-12">
        <img
          src="/images/work_image.jpg"
          alt="Work"
          class="rounded-xl shadow-md"
        />
      </div>
      <div class="w-full md:w-1/2 p-8 md:p-12 flex flex-col gap-6 dark:bg-gray-800">
        <h3 class="text-lg md:text-xl font-semibold ">Fiskill</h3>
        <p>
          Lorem ipsum dolor sit amet consectetur adipisicing elit. Voluptas,
          quisquam nobis fugiat hic magni libero, dignissimos ratione numquam ut
          explicabo suscipit rerum fugit repellendus sunt, assumenda culpa
          dolorum!
        </p>

        <div class="flex gap-2 flex-wrap">
          {tags.map((item: string) => (
            <Tag tag={item} />
          ))}
        </div>

        <a href="#" target="_blank">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="icon icon-tabler icons-tabler-outline icon-tabler-external-link">
            <>
              <path stroke="none" d="M0 0h24v24H0z" fill="none" />
              <path d="M12 6h-6a2 2 0 0 0 -2 2v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2 -2v-6" />
              <path d="M11 13l9 -9" />
              <path d="M15 4h5v5" />
            </>
          </svg>
        </a>
      </div>
    </div>
  ))
}
