---
import Heading from "./headings/Heading.astro";
import ItemTestimonial from "./blocks/ItemTestimonial.astro";
---

<section id="testimonials" class="bg-gray-50 dark:bg-gray-900 py-16 md:py-24">
  <div class="max-w-7xl mx-auto px-4 md:px-8">
    <Heading title="Testimonials" />
    <p class="mb-6 md:mb-12 mt-[-24px] text-center text-xl">
      Nice things people have said about me:
    </p>

    <div class="flex flex-col md:flex-row justify-between gap-6 md:gap-12">
      <ItemTestimonial />
    </div>
  </div>
</section>
